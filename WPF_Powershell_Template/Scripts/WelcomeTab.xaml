<TabItem xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         Header="Welcome">
    <Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>  <!-- Icon Column -->
            <ColumnDefinition Width="*" />    <!-- Text Column -->
        </Grid.ColumnDefinitions>

        <!-- Large Icon -->
        <Image Source="C:\Advanced_SQL_Server_Toolkit\WPF_Powershell_Template\Assets\icons8-satellite-1600.png"
               Width="120" Height="120"
               VerticalAlignment="Top"
               Margin="20"/>

        <!-- Text Content -->
        <StackPanel Grid.Column="1" Margin="20">
            <!-- Large Header -->
            <TextBlock Text="Advanced SQL Puzzles" 
                       FontSize="24" FontWeight="Bold" Foreground="Black" Margin="0,5,0,15"/>
            
            <Border BorderThickness="0,0,0,1" BorderBrush="Gray" Margin="0,10,0,5"/>
            
            <!-- Text Content -->
            <TextBlock Text="The MegaMigrateâ„¢ Ultra Super-Turbo Utility" 
                       FontSize="20" FontWeight="Bold" Margin="0,5,0,3"/>
                       
            <!-- Tagline -->
            <TextBlock Text="Your slogan here!" 
                       FontSize="16" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,15"/>

            <!-- Company Website -->
            <TextBlock Text="Visit our website:" 
                       FontSize="14" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Name="CompanyWebsite"
                       Text="https://advancedsqlpuzzles.com"
                       FontSize="14" Foreground="Blue" Cursor="Hand"
                       TextDecorations="Underline"/>

            <!-- Space Before GitHub Link -->
            <TextBlock Height="10"/> <!-- Adds spacing -->

            <!-- GitHub Link -->
            <TextBlock Text="GitHub repository:" 
                       FontSize="14" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Name="GitHubLink"
                       Text="https://github.com/"
                       FontSize="14" Foreground="Blue" Cursor="Hand"
                       TextDecorations="Underline"/>
                       
            <!-- Animated GIF at the bottom -->
            <MediaElement x:Name="ClickHereGif"
                          Source="C:\Advanced_SQL_Server_Toolkit\WPF_Powershell_Template\Assets\icons8-light.gif"
                          Width="60" Height="60"
                          LoadedBehavior="Play"
                          UnloadedBehavior="Stop"
                          Stretch="Uniform"
                          Margin="0,20,0,0"
                          HorizontalAlignment="Left"/>

            <!-- Welcome Notes -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" Padding="5">
                <TextBox Name="WelcomeNotesBox"
                         FontFamily="Consolas"
                         FontSize="12"
                         Foreground="Black"
                         Background="White"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         Height="250"/>
            </Border>
        </StackPanel>
    </Grid>
</TabItem>
